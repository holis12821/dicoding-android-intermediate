<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"> <!--
    State when shape ( as button etc) is pressed-->
    <item android:state_pressed="false">
        <shape>
            <solid android:color="@color/pink_500" />
            <corners android:radius="@dimen/margin_medium_small" />
            <padding android:left="@dimen/margin_small" android:right="@dimen/margin_small" />
        </shape>
    </item>
    <!--State when shape is not pressed or idle-->
    <item>
        <shape>
            <solid android:color="@color/pink_500" />
            <corners android:radius="@dimen/margin_medium" />
            <padding android:left="@dimen/margin_small" android:right="@dimen/margin_small" />
        </shape>
    </item>
</selector>